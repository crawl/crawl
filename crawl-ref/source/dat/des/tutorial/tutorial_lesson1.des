require("clua/tutorial.lua")

tutorial_msg = {}

function tutorial_msg.start ()
    tutorial_intro("In this lesson you're going to learn how to move around and explore a level.")

    local text = "You can move "
    if crawl.is_tiles() then
        text = text .. "by clicking somewhere with your <white>mouse</white>, or "
    end
    text = text .. "with the <white>arrow keys</white>. "
           .. "To begin with, head over to that <blue>blue</blue> square to the right!"
    crawl.mpr(text, "tutorial")
end

function tutorial_msg.go_on ()
    return tutorial_message("You're doing great! Now, explore a bit until you reach the next blue square.")
end

function tutorial_msg.diagonal1 ()
    local text = "You can also move diagonally, by way of the <white>number pad</white> or by using the <white>vi keys</white>.\n"
                 .. "  Numpad:       <white>1 2 3</white>           " .. "vi-keys:    " .. tutorial_get_cmd("CMD_MOVE_UP_LEFT") .. " "
                 .. tutorial_get_cmd("CMD_MOVE_UP") .. " " .. tutorial_get_cmd("CMD_MOVE_UP_RIGHT") .. "\n"
                 .. "                 \\|/                         " .. "\\|/\n"
                 .. " (Try both      <w>4</w>-<w>.</w>-<w>6</w>          (These can   "
                 .. tutorial_get_cmd("CMD_MOVE_LEFT") .. "-<w>.</w>-" .. tutorial_get_cmd("CMD_MOVE_RIGHT") .. "\n"
                 .. " <white>NumLock</white>         /|\\           be useful     " .. "/|\\\n"
                 .. " on and off)    <white>7 8 9</white>          on laptops)  " .. tutorial_get_cmd("CMD_MOVE_DOWN_LEFT") .. " "
                 .. tutorial_get_cmd("CMD_MOVE_DOWN") .. " " .. tutorial_get_cmd("CMD_MOVE_DOWN_RIGHT") .. "\n"
                 .. "For example, you can move down that corridor with <white>9</white> or " .. tutorial_get_cmd("CMD_MOVE_DOWN_RIGHT")

    if crawl.is_tiles() then
        text = text .. ", or again, via <white>mouse click</white>"
    end

    text = text .. "."
    return tutorial_message(text)
end

function tutorial_msg.diagonal2 ()
    local text = "Move to the upper right with <white>3</white> or " .. tutorial_get_cmd("CMD_MOVE_UP_RIGHT") .. "."
    return tutorial_message(text)
end

function tutorial_msg.diagonal3 ()
    local text = "Move to the upper left with <white>1</white> or " .. tutorial_get_cmd("CMD_MOVE_UP_LEFT") .. "."
    return tutorial_message(text)
end

function tutorial_msg.diagonal4 ()
    local text = "Move to the lower left with <white>7</white> or " .. tutorial_get_cmd("CMD_MOVE_DOWN_LEFT") .. "."
    return tutorial_message(text)
end

function tutorial_msg.downstairs ()
    local text = "When standing on a staircase leading downwards, you can enter the next level with "
                 .. tutorial_get_cmd("CMD_GO_DOWNSTAIRS")
    if crawl.is_tiles() then
      text = text .. " or with <white>Shift-Click</white> on your character"
    end

    text = text .. ".\n"

    return tutorial_message(text)
end

-- The second part of the map.
function tutorial_msg.levelmap ()
    local text = "What's this? You've arrived in a completely different part of the level! To find out where you are, "

    if crawl.is_tiles() then
        text = text .. "have a look at the <white>minimap</white> to the right of the screen. You can have a closer look at a part of the map with a <white>right mouseclick</white> and also can travel there with a <white>leftclick</white>."
    else
        text = text .. "enter the overmap view with " .. tutorial_get_cmd("CMD_DISPLAY_MAP")
               .. " and then move the cursor around to look around the level. You also can travel wherever your cursor is pointing by pressing <white>.</white> or <white>Enter</white>. Press <white>Escape</white> to return to the normal game mode."
    end

    return tutorial_message(text)
end

function tutorial_msg.autoexplore ()
    local text = "Exploring manually can get tedious after a while, so you might want to let that heppen automatically. Try it by pressing "
                 .. tutorial_get_cmd("CMD_EXPLORE") .. "."
    return tutorial_message(text)
end

function tutorial_msg.exclusion ()

    local text = "Some types of clouds and also some monsters are automatically marked as dangerous, "
                 .. "so autotravel doesn't lead you right into danger. These '<white>exclusions</white>' "

    if crawl.is_tiles() then
        text = text .. "are shown as <red>red X</red>'s."
    else
        text = text .. "are highlighted in red on the level map (" .. tutorial_get_cmd("CMD_DISPLAY_MAP") .. ")."
    end

    text = text .. " You cannot autotravel "
    if crawl.is_tiles() then
        text = text .. "(including by mouseclick!) "
    end

    text = text .. "to or through excluded terrain, but in these cases manual movement is usually much safer anyway. However, autotravel will try to move you safely around the danger, so you can simply press " .. tutorial_get_cmd("CMD_EXPLORE") .. " and continue traveling."

    return tutorial_message(text)
end

function tutorial_msg.autoexplore_announce ()
    local text = "Autoexplore will stop to announce features and items. To continue traveling, press "
                 .. tutorial_get_cmd("CMD_EXPLORE") .. " again."
    return tutorial_message(text)
end

function tutorial_msg.tutorial_end ()
    return tutorial_message("Congratulations! You've completed the first lesson!\n"
                            .. "To exit the tutorial, simply go up these stairs. Confirm the resulting prompt with an uppercase <white>Y</white>.")
end

function tutorial_msg.exit ()
    -- A single screen recapping all commands.

    local text = "<yellow>Movement commands</yellow>\n\n"
                 .. "  Numpad:       <white>1 2 3</white>           " .. "vi-keys:    " .. tutorial_get_cmd("CMD_MOVE_UP_LEFT") .. " "
                 .. tutorial_get_cmd("CMD_MOVE_UP") .. " " .. tutorial_get_cmd("CMD_MOVE_UP_RIGHT") .. "\n"
                 .. "                 \\|/                         " .. "\\|/\n"
                 .. "                <w>4</w>-<w>.</w>-<w>6</w>                       "
                 .. tutorial_get_cmd("CMD_MOVE_LEFT") .. "-<w>.</w>-" .. tutorial_get_cmd("CMD_MOVE_RIGHT") .. "\n"
                 .. "                 /|\\                         " .. "/|\\\n"
                 .. "                <white>7 8 9</white>                       " .. tutorial_get_cmd("CMD_MOVE_DOWN_LEFT") .. " "
                 .. tutorial_get_cmd("CMD_MOVE_DOWN") .. " " .. tutorial_get_cmd("CMD_MOVE_DOWN_RIGHT") .. "\n\n"
                 .. "<white>Shift + direction</white> moves you several squares into this direction.\n\n"

    if crawl.is_tiles() then
        text = text .. "You also can move by <white>clicking</white> somewhere in sight or on the <white>minimap</white>.\n"
    end

    text = text .. "\n<yellow>Staircases</yellow>\n"
                .. "  " .. tutorial_get_cmd("CMD_GO_UPSTAIRS") .. "  go back to the previous level\n"
                .. "  " .. tutorial_get_cmd("CMD_GO_DOWNSTAIRS") .. "  enter the next level\n"

    text = text .. "\n<yellow>Doors</yellow>\n"
                .. "  can be opened by walking into them\n"
                .. "  " .. tutorial_get_cmd("CMD_CLOSE_DOOR") .. "  close an open door\n"
                .. "  " .. tutorial_get_cmd("CMD_REST") .. "  search for secret doors\n"

    text = text .. "\n<yellow>Travel</yellow>\n"
    if crawl.is_tiles() then
        text = text .. "  mouseclick on the <white>minimap</white>\n"
    else
        text = text .. "  " .. tutorial_get_cmd("CMD_DISPLAY_MAP") .. "  enter the level map, travel with <white>Enter</white>\n"
    end
    text = text .. "  " .. tutorial_get_cmd("CMD_EXPLORE") .. "  autoexplore\n\n\n"
                .. "                                 <cyan>Press <white>any key</white> to clear this screen...</cyan>\n"

    return crawl.endgame(text)
end
}}

