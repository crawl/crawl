  return (you.hunger_name() == "near starving"
          or you.hunger_name() == "very hungry"
             and (where == "Snake:5" or where == "Spider:5"
                  or you.xl() >= 18 or intrinsic_gourmand())
          or you.hunger_name() == "starving")
