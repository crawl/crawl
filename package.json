{
    "name": "crawl-workspace",
    "private": true,
    "version": "0.0.0",
    "packageManager": "npm@10.9.3",
    "workspaces": ["crawl-ref/source/webserver/client/lobby", "crawl-ref/source/webserver/client/game"],
    "scripts": {
        "build": "npm run build:lobby && npm run build:game",
        "build:lobby": "cd crawl-ref/source/webserver/client/lobby && npm run build",
        "build:game": "cd crawl-ref/source/webserver/client/game && npm run build",
        "lint": "npm run lint:lobby && npm run lint:game",
        "lint:lobby": "cd crawl-ref/source/webserver/client/lobby && npm run lint",
        "lint:game": "cd crawl-ref/source/webserver/client/game && npm run lint",
        "format": "npm run format:lobby && npm run format:game",
        "format:lobby": "cd crawl-ref/source/webserver/client/lobby && npm run format",
        "format:game": "cd crawl-ref/source/webserver/client/game && npm run format"
    }
}